{% extends "base.html.twig" %}

{% block body %}

<br>
Liste des produits du {{vendeur.nom}}
<div class="container">
    <div class="row">
       <a href="{{path('addProduit')}}" class="col-6 mx-auto btn btn-success">Ajouter un produit</a>
    </div>
<div class="row mt-5">
    

  {% for produit in produits %} 
    <div class=" col-md-3 mb-5">

      <div class="card" style="width: 19rem;">
          <div class="card-body text-center">
            <h5 class="card-title">{{produit.nom}}</h5>
            <img src="{{asset(produit.image)}}" alt="" width="200px" height="200px">
            <p class="card-text">{{produit.description}}</p>
          </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            Stock : {{produit.stock}}
          </li>
          <li class="list-group-item">
             poid d'une portion : {{ produit.poidUnitaire}}
          </li>
          <li class="list-group-item">
             prix de la portion HT : {{ produit.prixUnitaireHT }}
          </li>
          <li class="list-group-item">
            prix de la portion TTC : {{ (produit.prixUnitaireHT + produit.prixUnitaireHT * produit.TVA)|number_format(2)}}

         </li>
         <li class="list-group-item p-0 d-flex justify-content-between">
         <a href="{{path('updateProduit', {'id': produit.id})}}" class="btn btn-sm col-6 btn-primary">modifier</a>
         <a href="{{ path('deleteProduits',{'id' :produit.id }) }}" class="btn btn-sm col-5 btn-danger">supprimer</a> 
       </li>
        </ul>

      </div>
    </div>
        
  {% endfor %}
 </div>
</div>

{% endblock %}