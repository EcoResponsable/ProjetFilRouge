{% extends "base.html.twig" %}

{% block body %}

<br>
Liste des produits du {{vendeur.nom}}
<div class="container">
    <div class="row">
       <a href="{{path('addProduit')}}"> <button class="col-6 mx-auto btn btn-success">Ajouter un produit</button></a>
    </div>
<div class="row mt-5">
    

  {% for produit in produits %} 
    <div class=" col-md-3 mb-5">

      <div class="card" style="width: 19rem;">
          <div class="card-body">
            <h5 class="card-title">{{produit.nom}}</h5>
            <p class="card-text">{{produit.description}}</p>
          </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            Stock : {{produit.stock}}
          </li>
          <li class="list-group-item">
             poid d'une portion : {{ produit.poidUnitaire}}
          </li>
          <li class="list-group-item">
             prix de la portion HT : {{ produit.prixUnitaireHT }}
          </li>
          <li class="list-group-item">
            prix de la portion TTC : {{ (produit.prixUnitaireHT + produit.prixUnitaireHT * produit.TVA)|number_format(2)}}

         </li>
        </ul>
        <a href="{{path('updateProduit', {'id': produit.id})}}"><button class="btn btn-primary m-1">modifier</button></a>

       <a href="{{ path('deleteProduits',{'id' :produit.id }) }}"><button class="btn btn-danger m-1">supprimer</button></a> 
      </div>
    </div>
        
  {% endfor %}
 </div>
</div>

{% endblock %}