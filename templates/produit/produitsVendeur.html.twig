{% extends "base.html.twig" %}

{% block body %}
<br>
<div class="container-fluid">

    <div class="card mb-3" style="max-width: 1500px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="..." class="card-img" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Vendeur {{vendeur.raisonSociale}}</h5>
            <p class="card-text">Géré par: {{vendeur.nom}} {{vendeur.prenom}}</p>
            <p class="card-text">{{vendeur.description}}</p>
            <p class="card-text"><small class="text-muted">
              {% for adresse in vendeur.adresse %}
              {{adresse}}  
            {% endfor %}
            </small></p>
          </div>
        </div>
      </div>
    <br>
  </div>
</div>
<br>
Liste des produits du {{vendeur.nom}}
<div class="container">
<div class="row">

  {% for produit in produits %} 
    <div class=" col-md-3 mb-5">

      <div class="card" style="width: 19rem;">
         <img class="card-img-top" src="{{asset(produit.image)}}" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{produit.nom}}</h5>
           
            <p class="card-text">{{produit.description}}</p>
          </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            Stock : {{produit.stock}}
          </li>
          <li class="list-group-item">
             poid d'une portion : {{ produit.poidUnitaire}}
          </li>
          <li class="list-group-item">
             prix de la portion HT : {{ produit.prixUnitaireHT }}
          </li>
          <li class="list-group-item">
            prix de la portion TTC : {{ (produit.prixUnitaireHT + produit.prixUnitaireHT * produit.TVA)|number_format(2)}}
         </li>
         <li class="list-group-item">
           <a href="{{ path('panierUpdate', {'id' : produit.id, 'action' : 'plus'})}}" class="btn btn-success" role="button"><i class="fas fa-2x fa-cart-plus"></i></a>
         </li>
         <li class="list-group-item">
          <a href="{{path('cart_add',{'id':produit.id})}}"><button class="btn btn-success">Ajouter au panier</button></a>
       </li>
        </ul>
      
      </div>
    </div>
    
        
  {% endfor %}
 </div>
</div>

{% endblock %}