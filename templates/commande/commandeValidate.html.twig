{% extends "base.html.twig" %}

{% block body %}

<br>
  <div class="card alert alert-primary mx-auto" style="width: 35rem;">
    <div class="card-body text-center"> 
      <h5 class="card-title">Finalisez la commande {{reference}}</h5>
      <button type="button" id="checkout-button" class="btn btn-success btn-lg m-3">Payer</button>     
    </div>
  </div>


{% endblock %}  

 {% block javascripts %} 
 <script src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch"></script>
 <script src="https://js.stripe.com/v3/"></script>
 <script type="text/javascript">
    // Create an instance of the Stripe object with your publishable API key
    var stripe = Stripe("pk_test_51IEs8RIUHwlJ4AvS05gt7eHl4w73yFvhuqMqY6jTRtSDTPeqT54HjosXUhqjkhiRwRIGCuQA3Y5RxcleOnazumsb00a2argQ03");
    var checkoutButton = document.getElementById("checkout-button");
    checkoutButton.addEventListener("click", function () {
      fetch("/commande/{{reference}}", {
        method: "POST",
      })
        .then(function (response) {
          return response.json();
        })
        .then(function (session) {
          return stripe.redirectToCheckout({ sessionId: session.id });
        })
        .then(function (result) {
          // If redirectToCheckout fails due to a browser or network
          // error, you should display the localized error message to your
          // customer using error.message.
          if (result.error) {
            alert(result.error.message);
          }
        })
        .catch(function (error) {
          console.error("Error:", error);
        });
    });
  </script>
  {% endblock %}